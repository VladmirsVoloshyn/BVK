<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/schemaDataLayout"
        android:padding="6dp"
        android:layout_width="0dp"
        android:elevation="14dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/card_bg">

        <ImageView
            android:id="@+id/schema_avatar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/mandrel_image"
            android:src="@drawable/ic_baseline_backpack_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/schema_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="21sp"
            android:text="schema name"
            app:layout_constraintStart_toEndOf="@id/schema_avatar_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/box_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="box type"
            app:layout_constraintStart_toEndOf="@id/schema_avatar_image_view"
            app:layout_constraintTop_toBottomOf="@+id/schema_name_text_view" />

        <TextView
            android:id="@+id/schema_signs_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="schema signs"
            app:layout_constraintStart_toEndOf="@id/schema_avatar_image_view"
            app:layout_constraintTop_toBottomOf="@id/box_type_text_view" />

        <com.example.bvk.ui.custom.SchemaDrawer
            android:id="@+id/schema_image"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schema_signs_text_view" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/card_bg"
            android:contentDescription="@string/press_if_edit_item"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>